// Firebase Storage Security Rules for Urbindex
// Version: 1.1.0
// Last Updated: 2026-01-28
// Updated to allow public read access

service firebase.storage {
  match /b/{bucket}/o {
    // Profile photos - allow public read, only allow authenticated users to upload to their own profile photos directory
    match /profile-photos/{userId}/{allPaths=**} {
      allow read: if true; // Allow public access to profile photos
      
      allow write: if request.auth != null && 
                   request.auth.uid == userId &&
                   request.resource.size < 5 * 1024 * 1024 && // 5MB limit
                   request.resource.contentType.matches('image/.*') &&
                   request.resource.contentType in ['image/jpeg', 'image/png', 'image/webp', 'image/gif'];
    }

    // User gallery images - allow public read
    match /user-gallery/{userId}/{allPaths=**} {
      allow read: if true; // Allow public access to user galleries
      
      allow write: if request.auth != null && 
                   request.auth.uid == userId &&
                   request.resource.size < 10 * 1024 * 1024 && // 10MB limit
                   request.resource.contentType.matches('image/.*');
    }

    // Location photos - allow public read access
    match /location-photos/{locationId}/{allPaths=**} {
      allow read: if true; // Allow public access to location photos
      
      allow write: if request.auth != null &&
                   exists(/databases/(default)/documents/locations/{locationId}) &&
                   request.auth.uid == resource.metadata.ownerId &&
                   request.resource.size < 10 * 1024 * 1024 &&
                   request.resource.contentType.matches('image/.*');
    }

    // Temporary uploads - short-lived files for processing
    // Keep these private as they're only for processing
    match /temp-uploads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null &&
                          request.auth.uid == userId &&
                          request.time < timestamp.date(request.resource.timeCreated) + duration.value(1, 'h');
    }

    // Default deny rule for all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}